<div>

  <h2>Edit exercise: {{name}}</h2>

  <form
    action="/exercises/{{_id}}/edit"
    method="POST"
    enctype="multipart/form-data"
  >
    <label>Image:</label>
    <input type="file" id="image_input" name="file" accept="image/*,.jpg,.jpeg,.webp"/>

    <label>
      Name:
      <input type="text" name="name" placeholder="{{name}}" value="{{name}}" />
    </label>
    <label>
      Category:
      <input
        type="text"
        name="category"
        placeholder="{{category}}"
        value="{{category}}"
      />
    </label>
    <label>Description:
      <textarea
        name="description"
        cols="30"
        rows="10"
        placeholder="{{description}}"
      >{{description}}</textarea>
    </label>
    {{#if reps}}
      <label>
        Reps:
        <input
          type="number"
          name="reps"
          placeholder="{{reps}}"
          value="{{reps}}"
        />
      </label>
      <label>
        Sets:
        <select name="sets">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </label>
    {{/if}}
    <button type="submit">Save Changes!</button>
  </form>

   <form action="/exercises" method="get">
    <button>Return to all Exercises</button>
  </form>
</div>