  </form> --}}
  {{#if message}}
    <p>{{message}}</p>
  {{/if}}
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
  <form action="/instructor/{{instructor._id}}/workouts" method="get">
    <button class="btn-orange">Go to workouts</button>
  </form>
  <form action="/auth/logout" method="GET">
    <button type="submit">Logout</button>
  </form>
</div>