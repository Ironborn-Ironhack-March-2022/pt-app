<form
  action="/instructor/profile/edit"
  method="POST"
  enctype="multipart/form-data"
>

  <label>
    Edit Username:
    <input type="text" name="userName" value="{{instructor.userName}}" />
  </label>
  <label>
    Edit Email:
    <input type="email" name="email" value="{{instructor.email}}" />
  </label>
  <label>
    Password
    <input type="password" name="password" value="{{instructor.password}}" />
  </label>
  <label>Role:
    <select name="role">
      <option value="Instructor">Instructor</option>
      <option value="Client">Client</option>
    </select>
  </label>
  <label>Edit profile picture:
    <input type="file" id="image_input" name="file" accept="image/*" />
  </label>
  <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}