

<form action="/instructor/profile/edit" method="POST">
   <label> Username
      <input type="text" name="userName" value="{{instructor.userName}}">
   </label>
    <label> Email
      <input type="email" name="email" value="{{instructor.email}}">
   </label>
   <label> Password
      <input type="password" name="password" value="{{instructor.password}}">
   </label>
   <label>Role:
      <select name="role">
         <option value="Instructor">Instructor</option>
         <option value="Client">Client</option>
      </select>
   </label>
  
   <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}